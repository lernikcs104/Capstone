<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="asieproject.asie">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pinkheart"
        android:label="ASIE"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity android:name=".SubCategoryActivity"
            android:label="Subcategory List"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".ResourceActivity"
            android:label="Resource List"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".ResourceInfoActivity"
            android:label="Resource Information Detail"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
    </application>

</manifest>